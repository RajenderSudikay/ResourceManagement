<script>

    $('textarea').on('input', function () {
        this.style.height = 'auto';

        this.style.height =
            (this.scrollHeight) + 'px';
    });

    jQuery(".btn-add-maintenance-report").click(function () {
        //var sampletr = jQuery('.sample-it-maintenace-report');

        var sampletr = '<tr class="sample-it-maintenace-report">'
            + '<td scope = "row" style = "max-width:150px" > <textarea class="form-control maintenance-remarks" style="min-width: 100%" rows="1"></textarea></td>'
            + '<td scope="row" style="max-width:100px">'
            + '<select id="selectEmployeename" name="assetemployeename" class="form-control form-select form-select-lg mb-3" style="background-color:white">'
            + '<option disabled selected> -- Select Status -- </option>'
            + '<option value="YES">YES</option>'
            + '<option value="NO">NO</option>'
            + '</select>'
            + '</td>'
            + '<td scope="row" style="max-width:200px"><textarea class="form-control maintenance-remarks" style="min-width: 100%"  rows="1"></textarea></td>'
            + '<td scope="row" style="max-width:200px"><textarea class="form-control maintenance-addi-comments" style="min-width: 100%"  rows="1"></textarea> </td>'
            + '</tr>';

        $('.maintenance-report-table-grid').append(sampletr);
    });

    //Final submit post confirmation
    jQuery(".btn-upload-it-report").click(function () {
        var empName = jQuery('#selectEmployeename :selected').text();
        var EmployeeID = jQuery('#selectEmployeename :selected').val();
        var reportMonth = jQuery('#assetUploadMonth :selected').val();
        var AssetID = jQuery('#assetAssignID :selected').val();
        var ReportType = jQuery('#assetReportType :selected').val();
        var Remarks = jQuery('#assetremarks').text();
        var UploadedByEmpName = jQuery('.agent-full-name').text();
        var UploadedByEmpID = jQuery('.agent-navdrop-empid').text();

        fileData.append('EmployeeName', empName);
        fileData.append('EmployeeID', EmployeeID);
        fileData.append('UploadedMonth', reportMonth);
        fileData.append('AssetID', AssetID);
        fileData.append('ReportType', ReportType);
        fileData.append('Remarks', Remarks);
        fileData.append('Uploadedbyempid', UploadedByEmpID);
        fileData.append('Uploadedempname', UploadedByEmpName);

        jQuery.ajax({
            type: "POST",
            url: "/it/itreportsuploadajax",
            datatype: 'json',
            contentType: false,
            processData: false,
            async: false,
            data: fileData,
            success: function (data) {
                fileData = new FormData();
                if (data.jsonResponse.StatusCode == 200) {
                    window.location.href = "/it/uploadreport?success=true&selectedemp=" + empName;
                }
                else {
                    window.location.href = "/it/uploadreport?success=false&error=" + data.jsonResponse.Message + "";
                }
                jQuery('.upload-it-report-card').empty();
                fileData = new FormData();
            }
        });
    });

</script>
