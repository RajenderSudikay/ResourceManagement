@model ResourceManagement.Models.IT.ITModel

@{
    ViewBag.Title = "Vendor add update page";

    var bannerModel = new ResourceManagement.Models.BannerInfo();
    bannerModel.BannerName = "ADD UPDATE VENDOR";
    bannerModel.BannerImagePath = "/Assets/Banner/vendor.jpg";
}

@Html.Partial("~/Views/Home/_MenuNavigation.cshtml", Model.RMA_EmployeeModel)

@Html.Partial("~/Views/Home/_BannerInfo.cshtml", bannerModel)

<div class="card card-body" style="border-radius: 10px">
    <div class="card timesheet-card">
        <div class="card-body ">
            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="vendorname">Vendor Name<b style="color:red">*</b></label>
                        <input type="text" class="form-control" id="vendorname" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="vendoremail">Vendor Email<b style="color:red">*</b></label>
                        <input type="text" class="form-control" id="vendoremail" required>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="vendorlocation">Vendor Location<b style="color:red">*</b></label>
                        <select id="vendorlocation" name="vendorstatus" class="form-control form-select form-select-lg mb-3" required>
                            <option value="" disabled selected>Select Location</option>
                            <option value="Hyderabad">Hyderabad</option>
                            <option value="Madurai">Madurai</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="vendorstatus">Vendor Status<b style="color:red">*</b></label>
                        <select id="vendorstatus" name="vendorstatus" class="form-control form-select form-select-lg mb-3" required>
                            <option value="" disabled selected>Select Status</option>
                            <option value="Active">Active</option>
                            <option value="In-Active">In-Active</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="form-group">
                        <label for="vendoraddress">Vendor Address<b style="color:red">*</b></label>
                        <textarea class="form-control" id="vendoraddress" style="min-width: 100%" placeholder="vendoraddress"></textarea>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-group">
                        <label for="vendorremarks">Remarks</label>
                        <textarea class="form-control" id="vendorremarks" style="min-width: 100%" placeholder="vendorremarks"></textarea>
                    </div>
                </div>

            </div>

            <br />
            <div class="modal-footer mt-xl-4">
                <button type="submit" class="btn btn-info btn-lg btn-vendor-addupdate" style="width:100px; height:35px; border-radius:10px"><b style="font-size: 16px">Add Vendor</b></button>
            </div>

        </div>
    </div>
</div>


<div>
    @{
        var itEmpEmailIds = "";
    }
    @foreach (var itAdmin in Model.ITAdminUsers)
    {
        itEmpEmailIds += itAdmin.AMBC_Mail_Address.Trim() + ",";
    }

    <div class="it-admin-list" style="display:none">@itEmpEmailIds.Trim(',')</div>
</div>


<br />

@Html.Partial("~/Views/Shared/_EmployeeDetails.cshtml", Model.RMA_EmployeeModel)
@Html.Partial("~/Views/Home/_ModalAlerts.cshtml")

<script>

</script>
