@model ResourceManagement.emplogin

@{
    ViewBag.Title = "Login Page";
}
<style>
    body {
        overflow: hidden !important; /* Hide scrollbars */
        background-color: #faf0e6;
    }
</style>

<div class="sidenav" style="width: 50% !important">
    <div class="">

        <div class="" style="width: auto">
            <div class="">
                <div class="login-form" style="margin-top: 12% !important;">
                    <h2 style=" margin-left: 209px; font-size: xx-large; width: 100%; color: #60baaf "> Login Here </h2>

                    <p style="font-size: 13.5px; line-height: 24px; margin-bottom: 48px; margin-left: 146px; width: 100%; margin-top: 35px; color: white; }">Step into a world of personalized access. Login now!</p>
                    <br />
                  

                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                <div class="form-group">
                    @*<input type="text" class="form-control" placeholder="Emp ID">*@
                    @*<img src="~/Assets/MenuIcons/username.png" width="40" style=" margin-left: 125px; margin-bottom: -50px; background-color: white" />*@
                    @Html.TextBoxFor(a => a.att_username, new { @class = "form-control custom-form-control bi bi-people", placeholder = "User Name *" })
                    @Html.ValidationMessageFor(a => a.att_username, "", new { @class = "text-danger" })
                </div>
                        <br />
                        <div class="form-group">
                            @*<input type="password" class="form-control" placeholder="Password">*@                         
                            @*<img src="~/Assets/MenuIcons/padlock.png" width="40" style=" margin-left: 125px; margin-bottom: -50px;" />*@
                            @Html.PasswordFor(a => a.att_password, new { @class = "form-control custom-form-control bi bi-people", placeholder = "Password *" })
                            @Html.ValidationMessageFor(a => a.att_password, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <br />

                        <button type="submit" class="btn btn-info btn-lg" style="border: none; margin-left: 165px; width: 280px; height: 50px; background-color: black; color: white">LOGIN</button>
                        <br />
                        <br />
                        <h3 style="margin-top: 60px; margin-left: 150px !important; width: 100%">
                            <b style="color: white !important">Don't Have an account..?</b>
                            <a href="#" style="color: #60baaf">
                                Register Here
                            </a>
                        </h3>


                    }
                </div>
            </div>
        </div>


    </div>

</div>
<div class="main login-main" style="width: 60% !important; margin-left: 48%; margin-top: -235px; ">
    <div class="login-main-text">
        <h2 style="margin-left: 45px; margin-top:45px">
            Welcome To AMBC HRMS
            <br> <span style="padding-left: 100px"></span>
        </h2>
      
        <p style="font-size: large; width: 583px; margin-top: -25px">Stay organized and stay ahead with our comprehensive suite of features tailored to your needs.</p>
    </div>

    @*<div>
        <img src="~/Assets/Login-image.jpeg" style="margin-left: 200px !important" width="300" />
    </div>*@
</div>


<div class="modal message-success-popup" tabindex="-1" role="dialog" style="padding-top: 130px">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="border-radius: 30px">
            <div class="modal-header modal-header-success-custommessage" style="border-top-left-radius: 30px; border-top-right-radius: 30px">
                <img src="~/Assets/loudspeaker.png" style="width: 150px" />

            </div>
            <div class="modal-body text-center">
                <h2 class="modal-body-custom-success" style="padding-top:10px !important">
                    Hello there,
                    <br />
                    <br />
                    We have been working thoroughly to enhance our service over the past few months, finally we developed new <b>AMBC HRMS</b> application. Requesting you please use the application for weekly Timesheet. Thank you for your co-operation.
                </h2>
            </div>

            <div class="">
                <button type="button" class="btn btn-lg modal-success-popup-btn" data-dismiss="modal">Okay</button>
            </div>
        </div>
    </div>
</div>


