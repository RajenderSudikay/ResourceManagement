@model ResourceManagement.emplogin

@{
    ViewBag.Title = "Login Page";
}

<div class="sidenav">

    <div class="login-main-text">
        <h2>Resource Management<br> Login Page</h2>
        <br />
        <p>Login from here to access.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12 login-card">

        <div class="card " style="width: auto">
            <img class="card-img-top login-card-img-top" src="~/Assets/AMBC_Logo.png" alt="Card image cap">
            <div class="card-body login-card-body">
                <div class="login-form">

                    @*<div class="px-5 ms-xl-4">
                        <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                        <span class="h1 fw-bold mb-0">   <img src="~/Assets/AMBC_Logo.png" /></span>
                    </div>*@
                    <br />
                    <br />

                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <label><b>Emp ID</b></label>
                            @*<input type="text" class="form-control" placeholder="Emp ID">*@
                            @Html.TextBoxFor(a => a.att_username, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.att_username, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label><b>Password</b></label>
                            @*<input type="password" class="form-control" placeholder="Password">*@
                            @Html.PasswordFor(a => a.att_password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.att_password, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-info btn-lg">Login</button>
                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                    }
                </div>
            </div>
        </div>


    </div>
</div>