@model ResourceManagement.Models.BannerInfo

@if (Model.ShowBanner)
{
    <div class="card card-body fullwidthcomponent" style="background-color: #1181B2 !important  ">
        <div class="row" style="height: 120px !important">
            <div class="col-md-3">
                <img alt="" src="@Model.BannerImagePath" width="100" height="95" class="card-img-top img-fluid rounded-circle" style="margin-left: 200px; margin-top: -10px; width: 100px; height: 95px">
            </div>
            <div class="col-md-8">
                <h2 style="font-size: xx-large; color: white !important; margin-top: 15px; font-style: oblique;  "><b>@Model.BannerName</b></h2>
            </div>
        </div>
    </div>
}

