<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" sizes="32x32" href="https://cdn-ecpoc.nitrocdn.com/XaYLKlLnwUlnkVbJmDrBqpTtlAYIrCaz/assets/images/optimized/rev-bb15dcb/wp-content/uploads/2020/12/ambc_favicon.png" />

    <title class="page-name-title">@ViewBag.Title - AMBC HRMS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.2/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript" src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Scripts/moment.js"></script>

    <style>
        .navbar-fixed-top {
            width: 99.225vw;
            position: relative;
            margin-left: -49.59vw;
            left: 50%;
            margin-top: -50px;
            background-color: #005983;
        }

        .custom-container-fullwidth {
            width: 95%;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }

        .custom-container-fullwidth100 {
            width: 100%;
         
        }

     
            .nav-logo {
            border-bottom-right-radius: 35px;
            margin-top: -0.25vw;
            position: relative;
            margin-left: -0.59vw;
            margin-bottom: -0.3vw;
        }

        .custom-button {
            background-color: #00344d;
            border-radius: 15px;
            color: white;
            height: 40px;
            border: 1px solid yellow;
        }

            .custom-button:hover {
                background-color: rgb(74, 172, 197);
                color: white;
            }

        .footer {
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: red;
            color: white;
            text-align: center;
            margin-bottom: 0px;
        }

        .custom-button-submit {
            background-color: rgb(74, 172, 197);
            border-radius: 15px;
            color: white;
            height: 40px;
            border: 1px solid yellow;
        }

        /*   Related stop nav bar*/
        .time-headertitle {
            margin-left: auto !important
        }

        @@media (min-width: 992px) {
            .dropdown-menu .dropdown-toggle:after {
                border-top: .3em solid transparent;
                border-right: 0;
                border-bottom: .3em solid transparent;
                border-left: .3em solid;
            }

            .dropdown-menu .dropdown-menu {
                margin-left: 0;
                margin-right: 0;
            }

            .dropdown-menu li {
                position: relative;
            }

            .nav-item .submenu {
                display: none;
                position: absolute;
                left: 100%;
                top: -7px;
            }

            .nav-item .submenu-left {
                right: 100%;
                left: auto;
            }

            .dropdown-menu > li:hover {
                background-color: rgb(74, 172, 197)
            }

                .dropdown-menu > li:hover > .submenu {
                    display: block;
                }
        }

        .custom-navbar-nav {
            font-size: medium !important;
            color: white !important;
            margin-top: 20px !important
        }

            .custom-navbar-nav > a {
                color: white !important;
            }

            .custom-navbar-nav > li > a {
                color: white !important;
            }

            .custom-navbar-nav > .open > a {
                background-color: transparent !important;
                border-bottom: 2px solid white;
            }

            .custom-navbar-nav .dropdown-menu {
                border-radius: 12px !important;
                font-size: small !important;
                background-color: white !important;
            }

            .custom-navbar-nav > li {
                float: left !important;
                margin-right: 20px !important;
            }

                .custom-navbar-nav > li > .dropdown-menu {
                    margin-top: 0px !important;
                }

            .custom-navbar-nav .nav-item:hover {
                transform: scale(1.1);
            }

        .my-dropdown-toggle::after {
            content: none;
        }

        .modal-footer {
            background-color: #dae2f4 !important;
            border-radius: 10px !important;
        }
        .custom-navbar-nav .dropdown-menu {
            background-color: #dae2f4 !important
        }

       
    </style>
</head>
<body>

    <div id="overlay">
        <div class="cv-spinner">
            <span class="spinner"></span>
        </div>
    </div>
    <div class="custom-container-fullwidth" id="layout-div">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/main.js"></script>
    <div style="background-color: rebeccapurple">
    </div>

    <script>
        // Prevent closing from click inside dropdown
        $(document).on('click', '.dropdown-menu', function (e) {         
            e.stopPropagation();
        });

        $(document).on('click', '.nav-item', function (e) {           
            e.stopPropagation();
            $(this).css('border-bottom', '2px solid white');
        });

        // make it as accordion for smaller screens
        if ($(window).width() < 992) {
            $('.dropdown-menu a').click(function (e) {
                e.preventDefault();
                if ($(this).next('.submenu').length) {
                    $(this).next('.submenu').toggle();
                }
                $('.dropdown').on('hide.bs.dropdown', function () {
                    $(this).find('.submenu').hide();
                })
            });
        }  
      
    </script>

</body>
</html>
